wordsWhen p s =  case dropWhile p s of
                      "" -> []
                      s' -> w : wordsWhen p s''
                            where (w, s'') = break p s'

splitcomma = wordsWhen (==',')

gm_CSV fileName = do
    fileText <- readFile fileName
    return $ ((map splitcomma) . lines)  fileText

